#!/bin/bash
# Gradle wrapper script for Unix-based systems.

# This script allows you to execute Gradle commands in a project without needing to install Gradle locally.
# It will download Gradle automatically if it is not installed.

DEFAULT_JVM_OPTS="-Xmx1536m -XX:MaxPermSize=512m -Dfile.encoding=UTF-8"

# We use this environment variable to point to the Gradle distribution.
GRADLE_OPTS="$GRADLE_OPTS $DEFAULT_JVM_OPTS"

APP_HOME="$(cd $(dirname "$0")/..; pwd)"
export APP_HOME

# This script uses Gradle wrapper installed with your project, which will handle download and initialization of Gradle.
# To run this script, you need to have Java installed.

if [ -z "$JAVA_HOME" ]; then
  echo "JAVA_HOME is not set. Please set it to your JDK location."
  exit 1
fi

# This command starts Gradle and passes any arguments to it
# For example: ./gradlew assembleRelease
exec ./gradle "$@"
