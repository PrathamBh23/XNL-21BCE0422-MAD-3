#!/usr/bin/env sh
# -----------------------------------------------------------------------------
# This file was generated by the Gradle Wrapper. Do not edit it directly.
#
# Gradle version: 7.4.2
#
# See Gradle documentation for details: https://docs.gradle.org/7.4.2/userguide/gradle_wrapper.html
# -----------------------------------------------------------------------------

# Use the JDK from the local machine if it exists
JAVA_HOME="${JAVA_HOME:-$(/usr/libexec/java_home)}"
GRADLE_HOME="${GRADLE_HOME:-$(dirname $(which gradle))}"

# If Gradle is not found, download it
if [ ! -f "$GRADLE_HOME/gradle" ]; then
    echo "Downloading Gradle..."
    curl -sL https://services.gradle.org/distributions/gradle-7.4.2-bin.zip -o gradle.zip
    unzip -q gradle.zip
    rm gradle.zip
fi

exec "$GRADLE_HOME/bin/gradle" "$@"
