{
  "name": "mobile-app",
  "version": "1.0.0",
  "description": "Mobile application for CI/CD pipeline task",
  "main": "index.js",
  "scripts": {
    "start": "react-native start", 
    "test": "jest --coverage", 
    "lint": "eslint ./src",
    "format": "prettier --write ./src/**/*.js",
    "build": "react-native run-android", 
    "build-ios": "xcodebuild -scheme MyApp -configuration Release", 
    "detox": "detox test --configuration ios.sim.debug", 
    "deploy": "./scripts/deploy.sh", 
    "rollback": "./scripts/rollback.sh"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-native": "^0.65.0",
    "axios": "^0.21.1"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "prettier": "^2.3.0",
    "jest": "^27.0.6",
    "detox": "^19.0.0"
  },
  "jest": {
    "preset": "react-native",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "author": "Your Name",
  "license": "MIT"
}
